				<string object="[cv.DynamicWindow]" TEXT=".startAlpha" VERSION="8" name="startAlpha" tiptext="Set initial opacity" />
				<string object="[cv.DynamicWindow]" TEXT=".shadowAlpha" VERSION="8" name="shadowAlpha" tiptext="Set drop shadow opacity" />
				<string object="[cv.DynamicWindow]" TEXT=".shadowStrength" VERSION="8" name="shadowStrength" tiptext="Set drop shadow strength" />
            </folder>
          </folder>
    </actionspanel>
	
